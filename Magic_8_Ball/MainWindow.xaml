<Window x:Class="Magic_8_Ball.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Magic_8_Ball"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="50*"/>
        </Grid.RowDefinitions>
        
        <TextBox Name="QuestionTextBox" Text="Type your question here!"  Grid.Row="0"/>
        <Button Name ="Button"  Grid.Row="1" Width="90" Margin="8" RenderTransformOrigin="0.5,0.5" Click="Button_Click">
            Ask question
        </Button>
        <TextBox Name="AnswerTextBox" IsReadOnly="True" Grid.Row="2"/>
    </Grid>
</Window>
